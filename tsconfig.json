{
  "compilerOptions": {
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "removeComments": false,
      "noImplicitAny": false,
      "declaration": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": [
          "node",
          "jasmine"
      ],
      "lib": [
          "es2017",
          "dom"
      ]
  },
  "compileOnSave": false,
  "filesGlob": [
      "src/**/*.ts",
      "!node_modules/**",
      "!dist/**"
  ],
  "angularCompilerOptions": {
      "strictMetadataEmit": true,
      "skipTemplateCodegen": true
  },
  "exclude": [
      "node_modules",
      "e2e",
      "**/*.spec.ts"
  ]
}